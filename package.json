{
  "name": "root-monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint --parallel --no-daemon",
    "format": "turbo run format --parallel --no-daemon",
    "build": "turbo run build --no-daemon",
    "register": "yarn workspace @aviana/bot register",
    "generate": "yarn workspace @aviana/database prisma:generate",
    "push": "yarn workspace @aviana/database prisma:push",
    "postinstall": "is-ci || husky install",
    "update": "yarn upgrade-interactive"
  },
  "author": "Rygent",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-angular": "^17.7.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "packageManager": "yarn@3.6.3"
}
