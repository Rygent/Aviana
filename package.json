{
  "name": "@elvia/root",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --concurrency=3",
    "lint": "turbo run lint --concurrency=3",
    "format": "turbo run format --concurrency=3",
    "register": "yarn workspace @elvia/bot register",
    "generate": "turbo run db:generate",
    "push": "turbo run db:push",
    "postinstall": "is-ci || husky install",
    "update": "yarn upgrade-interactive"
  },
  "author": "Rygent",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-angular": "^19.5.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.8.4",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-terrax": "^0.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "is-ci": "^3.0.1",
    "lodash.merge": "^4.6.2",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.5.1"
}
