{
  "name": "root-monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build --concurrency=3",
    "lint": "turbo run lint --concurrency=3",
    "format": "turbo run format --concurrency=3",
    "register": "yarn workspace @aviana/bot register",
    "generate": "turbo run db:generate",
    "push": "turbo run db:push",
    "postinstall": "is-ci || husky install",
    "update": "yarn upgrade-interactive"
  },
  "author": "Rygent",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-angular": "^19.3.0",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "packageManager": "yarn@4.2.2"
}
