{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "@aviana/database#db:generate"],
      "inputs": ["src/**", ".swcrc", "package.json", "tsconfig.json", "tsup.config.ts"],
      "outputs": ["dist/**"],
      "outputMode": "errors-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "../../.eslintrc.json",
        "../../.prettierrc.json",
        "../../tsconfig.eslint.json",
        ".prettierrc.cjs",
        "src/**",
        "package.json",
        "tsconfig.eslint.json"
      ],
      "outputs": [],
      "outputMode": "errors-only"
    },
    "format": {
      "dependsOn": ["^build"],
      "inputs": [
        "../../.eslintrc.json",
        "../../.prettierrc.json",
        "../../tsconfig.eslint.json",
        ".prettierrc.cjs",
        "src/**",
        "package.json",
        "tsconfig.eslint.json"
      ],
      "outputs": [],
      "outputMode": "errors-only"
    },
    "db:generate": {
      "cache": false,
      "outputMode": "none"
    },
    "db:push": {
      "cache": false,
      "outputMode": "none"
    }
  }
}
